<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="footer_links">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="geekhub-footer-link">
                <arguments>
                    <argument name="label" xsi:type="string">Link to Json</argument>
                    <argument name="path" xsi:type="string">iuriis_geekhub_controller/customcontroller/jsonresponse</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="geekhub-footer-link-page">
                <arguments>
                    <argument name="label" xsi:type="string">Link to Show Person</argument>
                    <argument name="path" xsi:type="string">iuriis_geekhub_controller/customcontroller/showperson</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
