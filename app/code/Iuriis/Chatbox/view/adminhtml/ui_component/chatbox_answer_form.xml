    <fieldset name="general">
        <settings>
            <label/>
        </settings>

        <field name="message_id" sortOrder="10" formElement="input">
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>message_id</dataScope>
            </settings>
        </field>

        <field name="message" sortOrder="20" formElement="input">
            <settings>
                <dataType>text</dataType>
                <dataScope>message</dataScope>
            </settings>
        </field>


        <field name="answer" sortOrder="30" formElement="textarea">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Answer</label>
            </settings>
        </field>
    </fieldset>

</form>