<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd"
>
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">chatbox_listing.chatbox_listing_data_source</item>
        </item>
    </argument>

    <settings>
        <spinner>chatbox_listing_columns</spinner>
        <deps>
            <dep>chatbox_listing.chatbox_listing_data_source</dep>
        </deps>
    </settings>

    <dataSource name="chatbox_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">message_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Iuriis_Chatbox::listing</aclResource>
        <dataProvider class="Iuriis\Chatbox\Ui\Component\Listing\DataProvider" name="chatbox_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>message_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filterSearch name="fulltext"/>
        <filters name="listing_filters"/>
        <exportButton name="export_button"/>
        <massaction name="listing_massaction">
            <action name="delete">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to delete the selected chat?</message>
                        <title translate="true">Delete Chat</title>
                    </confirm>
                    <url path="iuriis_chatbox/chats/delete"/>
                    <type>delete</type>
                    <label translate="true">Delete Chat</label>
                </settings>
            </action>

        </massaction>
        <paging name="listing_paging"/>
    </listingToolbar>

    <columns name="chatbox_listing_columns">
        <settings>
            <editorConfig>
                <param name="enabled" xsi:type="boolean">false</param>
            </editorConfig>

            <childDefaults>
                <param name="fieldAction" xsi:type="array">
                    <item name="provider" xsi:type="string">chatbox_listing.chatbox_listing.chatbox_listing_columns.actions</item>
                    <item name="target" xsi:type="string">applyAction</item>
                    <item name="params" xsi:type="array">
                        <item name="0" xsi:type="string">edit</item>
                        <item name="1" xsi:type="string">${ $.$data.chat_hash }</item>
                    </item>
                </param>
            </childDefaults>
        </settings>

        <selectionsColumn name="ids" sortOrder="0">
            <settings>
                <indexField>message_id</indexField>
            </settings>
        </selectionsColumn>

        <column name="message_id" sortOrder="10">
            <settings>
                <filter>textRange</filter>
                <sorting>asc</sorting>
                <label translate="true">Message ID</label>
            </settings>
        </column>

        <column name="author_type" sortOrder="20">
            <settings>
                <filter>text</filter>
                <label translate="true">Author Type</label>
            </settings>
        </column>

        <column name="author_name" sortOrder="40">
            <settings>
                <filter>text</filter>
                <label translate="true">Author Name</label>
            </settings>
        </column>

        <column name="message" sortOrder="50">
            <settings>
                <filter>text</filter>
                <label translate="true">Message</label>
            </settings>
        </column>

        <column name="website_id" component="Magento_Ui/js/grid/columns/select" sortOrder="60">
            <settings>
                <filter>select</filter>
                <options class="Magento\Store\Model\ResourceModel\Website\Collection"/>
                <dataType>select</dataType>
                <label translate="true">Website</label>
            </settings>
        </column>

        <column class="Iuriis\Chatbox\Ui\Component\Listing\Column\ChatHash" name="chat_hash" sortOrder="70">
            <settings>
                <filter>text</filter>
                <label translate="true">Chat Hash</label>
<!--                <controlVisibility>false</controlVisibility>-->
<!--                <visible>false</visible>-->
            </settings>
        </column>

        <column name="created_at" sortOrder="80">
            <settings>
                <filter>textRange</filter>
                <sorting>asc</sorting>
                <label translate="true">Created At</label>
            </settings>
        </column>

        <column name="message_priority" sortOrder="90">
            <settings>
                <filter>text</filter>
                <label translate="true">Message Priority</label>
            </settings>
        </column>

        <actionsColumn name="actions" class="Iuriis\Chatbox\Ui\Component\Listing\Column\Actions">
            <settings>
                <indexField>chat_hash</indexField>
            </settings>
        </actionsColumn>
    </columns>
</listing>